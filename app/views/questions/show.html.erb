<p id="notice"><%= notice %></p>
<div>
<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>
<p>
  <strong>Description:</strong>
  <%= @question.description %>
</p>
</div>
  <h4>Comments</h4>
  <% @question.comments.each do |comment|%>
  <div class="row">
        <div class="col">
        <p><%= comment.message %>&nbsp;&nbsp;By: <%= comment.user.name %></p>
        </div>
        <div class="col-1">
        <%= link_to 'Edit', edit_comment_path(comment) %>
        </div>
        <div class="col-1">
        <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
  </div>
  <% end %>
<h5>Add comment here</h5>
<%= form_with(scope: :comment,url:comments_path,class:"addNewCommentForm",method: :post,local:true) do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :question_id_for_comment, value: @question.id %>
  <%= f.submit "Add" %>
<% end %>    <br>

<%= link_to 'Edit the Question', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
