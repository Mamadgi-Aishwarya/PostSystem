<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @question.description %>
</p>
<table>
<tr><td><h4>Comments</h4></td></tr>
      <% @question.comments.each do |comment|%>
        <tr><td><%= comment.message %>&nbsp;&nbsp;By: <%= comment.user.name %></td></tr>
        <tr><td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td></tr>
      <% end %>
      </tr>
      </table>
<h4>Add comment here</h4>
<%= form_with(scope: :comment,url:comments_path,class:"addNewCommentForm",method: :post,local:true) do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :question_id_for_comment, value: @question.id %>
  <%= f.submit "Add" %>
<% end %>    <br>

<%= link_to 'Edit the Question', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
